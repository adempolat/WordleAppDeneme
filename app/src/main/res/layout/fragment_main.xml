<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coinsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/coinIcon"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_coin"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/fiveLetterWordsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Harfli Kelimeler - Seviye: 1"
            android:fontFamily="@font/montserrat_alternates" />

        <Button
            android:id="@+id/sixLetterWordsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Harfli Kelimeler - Seviye: 1"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_alternates" />

        <Button
            android:id="@+id/sevenLetterWordsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 Harfli Kelimeler - Seviye: 1"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_alternates" />

        <Button
            android:id="@+id/timedModeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ¼reli Mod"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_alternates" />
    </LinearLayout>
</FrameLayout>
